<?xml version="1.0"?>
<labwc_config>
  <theme>
    <name>Afterpiece</name>
    <cornerRadius>4</cornerRadius>
    <dropShadows>yes</dropShadows>
    <font>
      <name>Intel One Mono</name>
    </font>
  </theme>

  <core>
    <adaptiveSync>yes</adaptiveSync>
    <reuseOutputMode>yes</reuseOutputMode>
    <gaps>10</gaps>
  </core>

  <resistance>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <windowSwitcher show="yes" preview="no" outlines="no" allWorkspaces="no" />

  <desktops>
    <number>4</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>Main</name>
      <name>Aux1</name>
      <name>Aux2</name>
      <name>Aux3</name>
    </names>
  </desktops>

  <regions>
    <region name="left-half" x="0%" y="0%" width="50%" height="100%" />
    <region name="right-half" x="50%" y="0%" width="50%" height="100%" />
    <region name="top-left" x="0%" y="0%" width="50%" height="50%" />
    <region name="bottom-left" x="0%" y="50%" width="50%" height="50%" />
    <region name="top-right" x="50%" y="0%" width="50%" height="50%" />
    <region name="bottom-right" x="50%" y="50%" width="50%" height="50%" />
  </regions>

  <keyboard>
    <numlock>off</numlock>
    <default />

    <keybind key="W-l">
      <action name="execute" command="swaylock" />
    </keybind>

    <keybind key="W-Return">
      <action name="execute" command="alacritty" />
    </keybind>

    <keybind key="W-m">
      <action name="execute" command="/opt/deadbeef/deadbeef" />
    </keybind>

    <keybind key="C-Space">
      <action name="Execute" command="wofi --show drun" />
    </keybind>

    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>

    <keybind key="W-S-l">
      <action name="GoToDesktop" to="right" />
    </keybind>

    <keybind key="W-S-h">
      <action name="GoToDesktop" to="left" />
    </keybind>

    <keybind key="C-A-Return">
      <action name="ToggleMaximize" />
    </keybind>

    <keybind key="C-A-h">
      <action name="SnapToRegion" region="left-half" />
    </keybind>
    <keybind key="C-A-l">
      <action name="SnapToRegion" region="right-half" />
    </keybind>
    <keybind key="C-A-y">
      <action name="SnapToRegion" region="top-left" />
    </keybind>
    <keybind key="C-A-n">
      <action name="SnapToRegion" region="bottom-left" />
    </keybind>
    <keybind key="C-A-o">
      <action name="SnapToRegion" region="top-right" />
    </keybind>
    <keybind key="C-A-.">
      <action name="SnapToRegion" region="bottom-right" />
    </keybind>
  </keyboard>
</labwc_config>
