<?xml version="1.0"?>
<labwc_config>
  <core>
    <adaptiveSync>yes</adaptiveSync>
    <reuseOutputMode>yes</reuseOutputMode>
    <gaps>4</gaps>
  </core>

  <resistance>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <desktops>
    <number>2</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>Main</name>
      <name>Aux</name>
    </names>
  </desktops>

  <theme>
    <name>Nightmare</name>
    <font place="ActiveWindow" name="Noto Sans" size="11" weight="Bold" />
    <font place="InactiveWindow" name="Noto Sans" size="11" />
    <font place="MenuItem" name="Noto Sans" size="11" />
    <font place="OnScreenDisplay" name="Noto Sans" size="11" />
  </theme>

  <keyboard>
    <numlock>off</numlock>
    <default />

    <keybind key="W-l">
      <action name="execute" command="i3lock" />
    </keybind>

    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>

    <keybind key="C-Space">
      <action name="Execute" command="wofi --show drun" />
    </keybind>
  </keyboard>
</labwc_config>
