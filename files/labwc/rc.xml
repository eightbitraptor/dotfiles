<?xml version="1.0"?>
<labwc_config>
  <theme>
    <name>Afterpiece</name>
  </theme>

  <core>
    <adaptiveSync>yes</adaptiveSync>
    <reuseOutputMode>yes</reuseOutputMode>
    <gaps>10</gaps>
  </core>

  <resistance>
    <screen_edge_strength>20</screen_edge_strength>
  </resistance>

  <windowSwitcher show="yes" preview="no" outlines="no" allWorkspaces="no" />

  <desktops>
    <number>4</number>
    <firstdesk>1</firstdesk>
    <names>
      <name>Main</name>
      <name>Aux1</name>
      <name>Aux2</name>
      <name>Aux3</name>
    </names>
  </desktops>

  <theme>
    <name>Nightmare</name>
    <font place="ActiveWindow" name="Noto Sans" size="11" weight="Bold" />
    <font place="InactiveWindow" name="Noto Sans" size="11" />
    <font place="MenuItem" name="Noto Sans" size="11" />
    <font place="OnScreenDisplay" name="Noto Sans" size="11" />
  </theme>

  <keyboard>
    <numlock>off</numlock>
    <default />

    <keybind key="W-l">
      <action name="execute" command="swaylock" />
    </keybind>

    <keybind key="W-Return">
      <action name="execute" command="alacritty" />
    </keybind>

    <keybind key="W-m">
      <action name="execute" command="/opt/deadbeef/deadbeef" />
    </keybind>

    <keybind key="C-Space">
      <action name="Execute" command="wofi --show drun" />
    </keybind>

    <keybind key="W-S-q">
      <action name="Close"/>
    </keybind>

    <keybind key="W-S-l">
      <action name="GoToDesktop" to="right" />
    </keybind>

    <keybind key="W-S-h">
      <action name="GoToDesktop" to="left" />
    </keybind>

    <keybind key="C-A-Return">
      <action name="ToggleMaximize" />
    </keybind>
  </keyboard>
</labwc_config>
